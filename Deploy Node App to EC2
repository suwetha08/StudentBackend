
on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v4

    - name: Setup SSH
      run: |
        mkdir -p ~/.ssh
        echo "${{ secrets.EC2_KEY }}" > ~/.ssh/ec2.pem
        chmod 600 ~/.ssh/ec2.pem
        ssh-keyscan -H ${{ secrets.EC2_HOST }} >> ~/.ssh/known_hosts

    - name: Deploy to EC2
      run: |
        ssh -i ~/.ssh/ec2.pem ${{ secrets.EC2_USER }}@${{ secrets.EC2_HOST }} << 'EOF'
        
        # Go to app directory
        cd ~/student-management-backend || exit 1

        # Pull latest code
        git pull origin main

        # Install dependencies
        npm install

        # Create env file
        echo "PORT=${{ secrets.PORT }}" > .env
        echo "MONGO_URI=${{ secrets.MONGO_URI }}" >> .env

        # Restart app using PM2
        pm2 stop all || true
        pm2 start index.js --name student-app
        pm2 save

        EOF
